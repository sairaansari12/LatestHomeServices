<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header'); -%>

<body class="loading">
    <!-- Begin page -->
    <div id="wrapper">
        <%- include('../partials/dashboardHeader'); -%>
            <div class="content-page">
                <div class="content">
                    <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <h4 class=form-label">Edit Coupon</h4>
                                </div>
                            </div>
                        </div>     
                        <!-- end page title --> 
                    <!-- Start Content-->
                    <div class="container-fluid">
                    <form  role="form" onsubmit="return false"  class="col-md-12"  id="adduser" >
                    <input type="hidden"  name="parentId" id="parentId"   />
                     <input type="hidden"  name="coupanId" id="coupanId"  value="<%-data.id%>" />
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="card-box">
                                    <h5 class="text-uppercase mt-3 mb-3 bg-light p-2">General</h5>

                                        <div class="form-group  mb-3">
                                            <label for="product-name">Coupon Name <span class="text-danger">*</span></label>
                                            <input type="text" value="<%-data.name%>" id="name" autocomplete="off"  minlength="2" maxlength="50" name="name" class="form-control" placeholder="Coupon Name">
                                        </div>

                                        <div class="form-group  mb-3">
                                            <label for="product-name">Coupon Code <span class="text-danger">*</span></label>
                                            <input type="text" id="code" value="<%-data.code%>"  autocomplete="off" minlength="2" maxlength="6" name="code" class="form-control" placeholder="Coupon Code">
                                        </div>

                                        <div class="form-group  mb-3">
                                            <label for="product-name">Coupon Discount (%) <span class="text-danger">*</span></label>
                                            <input type="number" min="1" max="99"  id="discount" value="<%-data.discount%>" name="discount" class="form-control" placeholder="Coupon Discount (%)">
                                        </div>


                                        <h5 class="text-uppercase mt-3 mb-3 bg-light p-2">Specifications</h5>

                                   
                                        <div class="form-group  mb-3">
                                            <label for="product-category">Categories <span class="text-danger">*</span></label>
                                            <select class="form-control chosen" name="categoryId" id="categoryId">
                                                <option value="" <% if(data.categoryId == ""){ %> selected <% } %>> All Categories</option>
                                                <%for(var t=0;t<catData.length;t++){%>
                                                   <option <% if(catData[t].id == data.categoryId){ %> selected <% } %>  value="<%-catData[t].id%>" /><%-catData[t].name%> 
                                                <%}%>
                                            </select>
                                        </div>


                                        <div class="form-group   mb-3">
                                            <label for="product-category">Type <span class="text-danger">*</span></label>
                                            <select class="form-control chosen" id="type" name="type">
                                                <option value="0" />All 
                                                <%for(var p=0;p<types.length;p++){%>
                                                    <option <%if(data.type==types[p].id){%> selected <%}%>   value="<%-types[p].id%>" ><%-types[p].userType%></option>  
                                                <%}%>
                                            </select>
                                        </div>
                                   

                                        <div class="form-group  mb-3">
                                            <label for="product-name">Coupon Usage Limit <span class="text-danger">*</span></label>
                                            <input type="number" min="1" max="10"  id="usageLimit" value="<%-data.usageLimit%>" name="usageLimit" class="form-control" placeholder="Coupon Usage Limit">
                                        </div>


                                        <div class="form-group mb-3">
                                            <label for="product-name">Minimum Order Amount <span class="text-danger">*</span></label>
                                            <input type="text" maxlength="10" oninput="this.value=this.value.replace(/[^0-9]/g,'');"   id="minimumAmount" value="<%-data.minimumAmount%>" name="minimumAmount" class="form-control" placeholder="Minimum Order Amount">
                                        </div>
                                  
                                        <div class="form-group">
                                            <label>Due Date <span class="text-danger">*</span></label>
                                            <input type="text" value="<%-data.validupto%>" class="form-control" id="validupto" name="validupto" placeholder="Coupon Valid">
                                        </div>

                                        
                                        <h5 class="text-uppercase mt-3 mb-3 bg-light p-2">Coupon Usage Description</h5>

                                          
                                        
                                        <div class="form-group  mb-3">

                                            <label for="product-description">Coupon Description <span class="text-danger">*</span></label>
                                            <textarea class="form-control" id="product-description" value="<%-data.description%>" name="description" rows="5" placeholder="Please enter description"><%-data.description%></textarea>
                                        </div>


                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="card-box">

                                        <h5 class="text-uppercase mt-3 mb-3 bg-light p-2">Coupon Image</h5>

                                        <div class="mt-3">
                                            <input  name="icon" id="icon"  type="file" data-default-file= "<%=data.thumbnail%>"  data-plugins="dropify" data-max-file-size="1M"  />
                                            <p class="text-muted text-center mt-2 mb-0">Click here to upload coupon image</p>
                                        </div>
                                            
        
                                        </div>
                                         
                                            <div class="dropzone-previews mt-3" id="file-previews">
                                                <img  style="display:none" class="avatar-title"  src="<%=data.thumbnail%>"   id="myIcon"  alt="">
                                            </div>
        
                                      



                                    </div>
                                </div> <!-- end card-box -->



                            </div> <!-- end col -->
                        </div>
                        <!-- end row -->

                        <div class="row">
                            <div class="col-12">
                                <div class="text-center mb-3">
                                    <a href="<%- superadminpath %>coupans"><button type="button" class="btn w-sm btn-light waves-effect">Cancel</button></a>
                                    <button type="submit" class="btn w-sm btn-success waves-effect waves-light">Update</button>
                                </div>
                            </div> <!-- end col -->
                        </div>
                        <!-- end row -->
                    </form>
                    </div> <!-- container -->

                </div> <!-- content -->
            </div>
                
</div>
                
    <!-- END wrapper -->

    <%- include('../partials/script'); -%>
    <%- include('../partials/commonJs'); -%>
    <script>
    $(function() { 
        $('#sidebar-menu ul li').find('a[href*="<%-superadminpath%>coupans"]').parent().addClass('menuitem-active');
        $('#sidebar-menu ul li a[href^="<%-superadminpath%>coupans"]').addClass('active');
    });
    $("#icon").change(function() {
  readURL(this,'myIcon');
});
    $("#validupto").flatpickr({minDate: "today"});
    $('#name').on('keypress', function (event) {
        var regex = new RegExp("^[a-zA-Z0-9_ ]*$");
        var key = String.fromCharCode(!event.charCode ? event.which : event.charCode);
        if (!regex.test(key)) {
           event.preventDefault();
           return false;
        }
    });
    $("#adduser").validate({
        rules: {
            name: {
              required: true
            },
            code: {
              required: true
            },
            discount: {
                required: true
            },
            
            type: {
                required: true
            },
            usageLimit: {
                required: true
            },
            minimumAmount: {
                required: true
            },
            validupto: {
                required: true
            },
            description: {
                required: true
            },
            icon: { accept: "image/jpg,image/jpeg,image/png,image/gif"},

        },
        messages: {
            name: {
                required: "This field is required"
            },
            code: {
                required: "This field is required"
            },
            discount: {
                required: "This field is required."
            },
            
            type: {
                required: "This field is required"
            },
            usageLimit: {
              required: "This field is required"
            },
            minimumAmount: {
              required: "This field is required"
            },
            validupto: {
              required: "This field is required"
            },
            description: {
              required: "This field is required"
            },
            icon: {accept: 'Not an image!'},
        },
        submitHandler: function (form) {
            var textareaValue = $('#product-description').summernote('code').replace(/<\/?[^>]+(>|$)/g, "");
            if(textareaValue=="")
            {showToastError("Please enter description")
              return false;
        }

        if(textareaValue.length>1000)
            {
           showToastError("Maximum 1000 characters allowed")
        return false;
        }
               var ext1 = $('#icon').val().split('.').pop().toLowerCase();
                if(ext1==null || ext1=="") ext1=$('#myIcon').attr('src').split('.').pop().toLowerCase();

                if($.inArray(ext1.trim(), ['gif','png','jpg','jpeg']) == -1     ) {
               showToastError('Please select only jpg and png files for image!')
                return false;
}


            else{

            var tempform = $('#adduser');
            var form_data = new FormData(tempform[0]);
            $("#loading1").show();
            $.ajax({
                type: 'POST',
                url: '<%-superadminpath%>coupans/update',
                dataType: 'json',
                data: form_data,
                contentType:false,
                cache:false,
                processData:false,
                success: function (response) {
                    $("#loading1").hide();
                    if (response.code == 200) {
                         toastr.success(response.message);
                        setTimeout(function(){
                            window.location.href="<%-superadminpath%>coupans";
                        }, 2000);
                       
                    } else {
                        toastr.error(response.message);
                        //showToastError(response.message)
                    }
                },
                error: function(response)
                {
                    $('#loading1').hide()

                   var errorResponse=JSON.parse(response.responseText)
                   showToastError(errorResponse.message)


                }
            });
          
        }
    
        }
        
    });
           
    </script>
</body>

</html>