<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/header'); -%>

    <body class="loading">

        <!-- Begin page -->
        <div id="wrapper">

            <%- include('../partials/dashboardHeader'); -%>


            <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">
                        
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">CereHome</a></li>
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Services</a></li>
                                            <li class="breadcrumb-item active">Product Edit</li>
                                        </ol>
                                    </div>
                                    <h4 class="page-title pb-1"><a  href="javascript:;" onclick="window.history.back()";> <i class="mdi mdi-backburger "></i> </a> Edit Product</h4>
                                </div>
                            </div>
                        </div>     
                        <!-- end page title --> 


                        <form  role="form"  onsubmit="return false"  id="addCat"   enctype="multipart/form-data">
                            <input type="hidden" id="serviceId" value="<%-data.id%>" name="serviceId" >

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="card-box">
                                    <h5 class="text-uppercase bg-light p-2 mt-0 mb-3" id="catName">General</h5>

                                    <div class="form-group mb-3">
                                        <label for="product-name">Product Name <span class="text-danger">*</span></label>
                                        <input  maxlength="100" type="text" id="serviceName"  value="<%-data.name%>" name="serviceName" class="form-control" placeholder="e.g : Pizza Paneer">
                                    </div>

                                  

                                        <div class="form-group mb-3 ">
                                            <label class="mb-2">Item Type <span class="text-danger">*</span></label>
                                            <br/>
                                           
                                        
                                            <%for(var t=0;t<filters.length;t++){%>
                                                <div class="ml-1 radio form-check-inline">
                                                    <input type="radio" id="itemtype" value="<%-filters[t].id%>" name="itemtype" <%if(data.itemType==filters[t].id){%>checked="" <%}%> >
                                                    <label for="inlineRadio1"> <%-filters[t].filter%> </label>
                                                </div>
                                               
                                                <%}%>


                                        </div>
    



                                        <div class="form-group mb-3">
                                            <label for="product-description">Product Description <span class="text-danger">*</span></label>
                                            <textarea class="form-control" name="description"  id="product-description" rows="5" placeholder="Please enter description"><%-data.description%></textarea>
                                        </div>


                                        <div class="form-group mb-3">
                                            <label for="product-reference">Unit <span class="text-danger">*</span></label>
                                            <select  class="selectpicker show-tick" data-style="btn-outline-pink"  id="unit" placeholder="" name="unit">
                                                <option value="">- Select unit type -</option>
                                                <option <%if(data.unit=="no"){%>selcted<%}%> value="no">Number</option>
                                                <option <%if(data.unit=="grams"){%>selcted<%}%>  value="grams">Grams</option>
                                               <option <%if(data.unit=="kg"){%>selcted<%}%> value="kg">Kg</option>
                                               <option <%if(data.unit=="meter"){%>selcted<%}%> value="meter">Meter</option>
                                               <option <%if(data.unit=="litre"){%>selcted<%}%> value="litre">Litre</option>
                                               <option <%if(data.unit=="pound"){%>selcted<%}%> value="pound">Pound</option>
                                              
                                            </select>     </div> 

                                    <div class="form-group mb-3">
                                        <label for="product-price">Duration(In minutes) <span class="text-danger">*</span></label>
                                        <input maxlength="9" oninput="this.value=this.value.replace(/[^0-9]/g,'');" type="text" class="form-control" value="<%-data.duration%>"  name="duration" id="duration"   placeholder="e.g : 20 Mins">
                                    </div>


                                    <div class="form-group mb-3">
                                        <label for="product-price">Price <span class="text-danger">*</span></label>
                                        <input type="text" maxlength="9" oninput="this.value=this.value.replace(/[^0-9]/g,'');"   min="1"  class="form-control" value="<%-data.originalPrice%>"  name="originalPrice"  id="originalPrice" placeholder="Enter amount">
                                    </div>


                                  
                                    <div class="form-group mb-0">
                                        <label>Included  Services</label>
                                        <textarea  maxlength="500" class="form-control" rows="3" value="<%-data.includedServices%>" name="includedServices" id="includedServices "  placeholder="Please enter comment"><%-data.includedServices%></textarea>
                                    </div>

                                
                                    <div class="form-group mb-0">
                                        <label>Excluded Services</label>
                                        <textarea  maxlength="500" class="form-control" rows="3"   value="<%-data.excludedServices%>"name="excludedServices" id="excludedServices"  placeholder="Please enter comment"><%-data.excludedServices%></textarea>
                                    </div>

                                   
                                </div> <!-- end card-box -->
                            </div> <!-- end col -->

                            <div class="col-lg-6">
                                
                                <div class="card-box">
                                    <h5 class="text-uppercase mt-0 mb-3 bg-light p-2">Product Images</h5>

                               

                                    <div class="mt-3">
                                        <input  name="thumbnail" id="thumbnail"   data-default-file= "<%=data.thumbnail%>" type="file" data-plugins="dropify" data-max-file-size="1M"  />
                                        <p class="text-muted text-center mt-2 mb-0">Click here to upload product image</p>
                                    </div>



                                    <!-- Preview -->
                                    <div class="dropzone-previews mt-3" id="file-previews">
                                        <img    style="display :none"   src="<%=data.thumbnail%>" class="avatar-title"  id="myIcon"  alt="">
                                    </div>
                                </div> <!-- end col-->

                                <div class="card-box">
                                    <h5 class="text-uppercase mt-0 mb-3 bg-light p-2">Offer Description</h5>

                                    <div class="form-group mb-3">
                                        <label for="product-price">Offer(%) </label>
                                        <input type="number"  max="99"  value="<%-data.offer%>" value="0" min="0"  class="form-control" name="offer" id="offer"   placeholder="Enter Offer">
                                    </div>



                                    <div class="form-group mb-3">
                                        <label for="product-price">Offer Name </label>
                                        <input type="text"  maxlength="50" value="<%-data.offerName%>" class="form-control" name="offerName" id="offerName"   placeholder="Enter Offer Name">
                                    </div>


                                    <div class="form-group mb-3">
                                        <label for="product-price">Offer Expiry </label>
                                        <input type="text"  value="<%-commonMethods.formatYYMMDD(new Date(data.validUpto?data.validUpto:''))%>" autocomplete="off"  id="basic-datepicker2" name="validUpto" class="form-control" placeholder="Offer expiry date">
                                    </div>


                                    <div class="form-group mb-3">
                                        <label for="product-price">Net Price <span class="text-danger">*</span></label>
                                        <input type="text"  value="<%-data.price%>" class="form-control" name="price" id="price" readonly placeholder="Enter amount">
                                    </div>

                                </div> <!-- end card-box -->

                            </div> <!-- end col-->
                        </div>
                        <!-- end row -->

                        <div class="row">
                            <div class="col-12">
                                <div class="text-center mb-3">
                                    <button type="button"  onclick="window.history.back()";  class="btn w-sm btn-light waves-effect">Cancel</button>
                                    <button type="submit" class="btn w-sm btn-success waves-effect waves-light">Save</button>
                                </div>
                            </div> <!-- end col -->
                        </div>
                      

</form>
                       

                        
                    </div> <!-- container -->

                </div> <!-- content -->

                <!-- Footer Start -->
                <%- include('../partials/footer'); -%>

                <!-- end Footer -->

            </div>

            <!-- ============================================================== -->
            <!-- End Page content -->
            <!-- ============================================================== -->


        </div>
        <!-- END wrapper -->

       



        
        <%- include('../partials/script'); -%>
        <%- include('../partials/commonJs'); -%>

        <script>
$("#basic-datepicker2").flatpickr({minDate: "today"});

function resetForm() {
    $('#addCat').trigger("reset");
}
function readURL(input) {
  if (input.files && input.files[0]) {
    var reader = new FileReader();
    
    reader.onload = function(e) {
        $('#myIcon').show()

      $('#myIcon').attr('src', e.target.result);
    }
    
    reader.readAsDataURL(input.files[0]); // convert to base64 string
  }
}

$("#thumbnail").change(function() {
  readURL(this);
});





$("#originalPrice").change(function(){

var newval=$("#originalPrice").val()
var offer=$("#offer").val()
if(offer && offer!="" && offer>0)
 newval=newval-(parseFloat(newval)*offer)/100
$("#price").val(newval)
});

$("#offer").change(function(){

    var newval=$("#originalPrice").val()
var offer=$("#offer").val()
if(offer && offer!="" && offer>0)
 newval=newval-(parseFloat(newval)*offer)/100
$("#price").val(newval)
});



$("#addCat").validate({
        rules: {
            serviceName: {
              required: true
            },
            
        
            duration: {
              required: true
            },
            originalPrice: {
              required: true
            },
            price: {
              required: true
            },



        },
        messages: {
            serviceName: {
                required: "This field is required"
            },

        
            duration: {
                required: "This field is required"
            },

            originalPrice: {
                required: "This field is required"
            },
            price: {
                required: "This field is required"
            },

        },
        submitHandler: function (form) {

            var textareaValue = $('#product-description').summernote('code').replace(/<\/?[^>]+(>|$)/g, "");
            if(textareaValue=="")
            {showToastError("Please enter description")
              return false;
        }

        if(textareaValue.length>1000)
            {
           showToastError("Maximum 1000 characters allowed")
        return false;
        }


    var ext1 = $('#thumbnail').val().split('.').pop().toLowerCase();
                if(ext1==null || ext1=="") ext1=$('#myIcon').attr('src').split('.').pop().toLowerCase();


                if($.inArray(ext1.trim(), ['gif','png','jpg','jpeg']) == -1     ) {
               showToastError('Please select only jpg and png files for image!')
                return false;
}


            else{
            var tempform = $('#addCat');
            var form_data = new FormData(tempform[0]);
            $("#loading1").show();
            $.ajax({
                type: 'POST',
                url: '<%-adminpath%>products/update',
                dataType: 'json',
                data: form_data,
                contentType:false,
                cache:false,
                processData:false,
                success: function (response) {
                    $("#loading1").hide();
                    if (response.code == 200) {
                  
                     showToastSuccess(response.message)

                     setTimeout(function() {
                         var id=$('#serviceId').val()
                      // window.location.href="<%-adminpath%>/products/";

        }, 500);
                       
                    } else {

                        showToastError(response.message)
                    }
                },
                error: function(response)
                {
                    $('#loading1').hide()

                   var errorResponse=JSON.parse(response.responseText)
                   showToastError(errorResponse.message)


                }
            });
        }
        
    }

    });
  






        </script>
       
        
    </body>
</html>